<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@drawable/sample_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.NoActionBar"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hardwareAccelerated="true"
                app:cardCornerRadius="12dp"
                android:layout_gravity="center"
                app:cardElevation="15dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="1dp"
                    android:hardwareAccelerated="true"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center"
                    app:cardElevation="9dp">

                    <ImageView
                        android:id="@+id/upload_bill_btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hand" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:hardwareAccelerated="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="9dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/sudo_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_date"
                        android:drawablePadding="10dp"
                        android:focusable="false"
                        android:hint="Last Date"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#303030"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#DDDDDD" />
                    <EditText
                        android:id="@+id/sudo_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_description"
                        android:drawablePadding="10dp"
                        android:hint="Description"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="#303030"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#DDDDDD" />

                    <EditText
                        android:id="@+id/sudo_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_amount_pay"
                        android:drawablePadding="10dp"
                        android:hint="Amount"
                        android:inputType="number"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="#303030"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#DDDDDD" />



                    <EditText
                        android:id="@+id/sudo_current"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_transfer_type"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Current Semester"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="#303030"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#DDDDDD" />
                    <EditText
                        android:id="@+id/sudo_apply_for"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_transfer_type"
                        android:drawablePadding="10dp"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Apply For"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:textColor="#303030"
                        android:textSize="16sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#DDDDDD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_student"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_background"
                android:elevation="20dp"
                android:padding="5dp"
                android:text="Generate"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:background="@drawable/button_background" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>